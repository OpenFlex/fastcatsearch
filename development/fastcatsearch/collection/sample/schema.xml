<?xml version="1.0" encoding="UTF-8"?>
<schema>
	<field-list>
		<field id="id" name="" type="int" />
		<field id="title" type="ustring" />
		<field id="category" type="int" />
		<field id="regdate" type="string" size="21" />
		<field id="tags" type="ustring" multiValue="true" multiValueDelimiter="\t" />
		<field id="body" type="ustring" />
		<field id="body" type="ustring" removeTag="true" store="false" />
		<field id="hit" type="int" />
		<field id="count" type="int" />
		<field id="comment" type="ustring" />
	</field-list>
	
	<primary>
		<field ref="id" />
		<field ref="category" />
	</primary>		
	
	<index-list>
		<index id="title" name="title_index" indexAnalyzer="korean_index" queryAnalyzer="korean_query">
			<field ref="title" />
		</index>
		<index id="title_ignore_case" name="title_ic_index" indexAnalyzer="korean_index" queryAnalyzer="korean_query">
			<field ref="title" />
		</index>
		<index id="body" indexAnalyzer="korean_index" queryAnalyzer="korean_query">
			<field ref="body" removeTag="true" />
		</index>
		<index id="all" indexAnalyzer="korean_index" queryAnalyzer="korean_query" positionIncrementGap="100">
			<field ref="title" />
			<field ref="body" removeTag="true" />
		</index>
		<index id="tags" ignoreCase="true" indexAnalyzer="keyword" queryAnalyzer="keyword">
			<field ref="tags" />
		</index>
	</index-list>
	
	<analyzer-list>
		<analyzer id="korean_index" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.korean.StandardKoreanAnalyzer</analyzer>
		<analyzer id="korean_query" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.korean.StandardKoreanAnalyzer</analyzer>
		<analyzer id="product_index" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.product.StandardProductAnalyzer</analyzer>
		<analyzer id="product_query" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.product.StandardProductAnalyzer</analyzer>
		<analyzer id="keyword" core_pool_size="10" maximum_pool_size="100">org.apache.lucene.analysis.core.KeywordAnalyzer</analyzer>
	</analyzer-list>
	
	<!-- sort, filter, group-function-argument -->
	<field-index-list>
		<field-index id="title" name="title_field_index" field="title" />
		<field-index id="title_prefix" name="title_prefix_field_index" field="title" size="10" />
		<field-index id="regdate" name="regdate_field_index" field="regdate" />
		<field-index id="category" name="category_field_index" field="category" />
		<field-index id="category_ignore_case" name="category_ic_field_index" field="category" ignoreCase="true" />
	</field-index-list>
	
	<group-index-list>
		<group-index id="category" name="category_group" field="category"/>
		<group-index id="tags" field="tags"/>
	</group-index-list>
	
	
</schema>
