<?xml version="1.0" encoding="UTF-8"?>
<schema version="1.0">
	<field-list>
		<field id="id" name="" primary="true" type="int" />
		<field id="title" type="ustring" size="-1" />
		<field id="category" type="int" />
		<field id="regdate" type="string" size="21" />
		<field id="tags" type="ustring" multiValue="true" multiValueDelimiter="\t" />
		<field id="body" type="ustring" removeTag="true" />
		<field id="hit" type="int" />
		<field id="count" type="int" />
		<field id="comment" type="ustring" />
	</field-list>
	
	<search>
		<index-list>
			<index id="title" indexAnalyzer="korean" queryAnalyzer="korean_query">
				<field ref="title" />
			</index>
			<index id="title_ignore_case" indexAnalyzer="korean" queryAnalyzer="korean_query">
				<field ref="title" />
			</index>
			<index id="body" indexAnalyzer="korean" queryAnalyzer="korean_query">
				<field ref="body" removeTag="true" />
			</index>
			<index id="all" indexAnalyzer="korean" queryAnalyzer="korean_query" positionIncrementGap="100">
				<field ref="title" />
				<field ref="body" removeTag="true" />
			</index>
			<index id="tags" ignoreCase="true" indexAnalyzer="keyword" queryAnalyzer="keyword" positionIncrementGap="100">
				<field ref="tags" />
			</index>
		</index-list>
		<analyzer-list>
			<analyzer id="korean" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.korean.StandardKoreanAnalyzer</analyzer>
			<analyzer id="korean_query" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.korean.StandardKoreanAnalyzer</analyzer>
			<analyzer id="product" core_pool_size="10" maximum_pool_size="100">com.fastcatsearch.plugin.analysis.product.StandardProductAnalyzer</analyzer>
			<analyzer id="keyword" core_pool_size="10" maximum_pool_size="100">org.apache.lucene.analysis.core.KeywordAnalyzer</analyzer>
		</analyzer-list>
	</search>
	
	<!-- sort, filter, group-function-argument -->
	<field-index-list>
		<field-index id="title" name="" field="title" />
		<field-index id="regdate" name="" field="regdate" />
		<field-index id="category" name="" field="category" />
		<field-index id="category_ic" name="" field="category" ignoreCase="true" />
	</field-index-list>
	
	<group-index-list>
		<group id="category" field="category"/>
		<group id="tags" field="tags" ignoreCase="true" />
	</group-index-list>
	
	
</schema>
